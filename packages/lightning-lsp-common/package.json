{
  "name": "@salesforce/lightning-lsp-common",
  "version": "2.2.8",
  "description": "Common components for lwc-language-server and aura-language-server.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "license": "BSD-3-Clause",
  "engines": {
    "vscode": "^1.26.0"
  },
  "scripts": {
    "clean": "rm -rf lib && rm -rf src/resources/sfdx/typings/copied",
    "cleanTestData": "node ../../scripts/removeTestData.js",
    "build": "tsc -p . && yarn copy-static-assets && node ./scripts/copy_typings.js && cp -r src/resources lib/",
    "watch": "tsc -w  | awk '{gsub(/\\033c/,\"\") system(\"\")}1'",
    "copy-static-assets": "ts-node copy-static-assets.ts",
    "test": "jest --runInBand",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --passWithNoTests --runInBand",
    "test:debugWindows": "node --inspect-brk ../../node_modules/jest/bin/jest.js --passWithNoTests --runInBand",
    "test_with_coverage": "jest --runInBand --coverage --collectCoverageFrom=src/**/*.ts --collectCoverageFrom=!src/**/*.d.ts --collectCoverageFrom=!src/**/__tests__/**/*",
    "lint": "tslint 'src/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "yarn prepare && yarn lint && yarn test",
    "windowsCopySymlinks": "rm ./test-workspaces && cp -r ../../test-workspaces ./test-workspaces"
  },
  "dependencies": {
    "decamelize": "^2.0.0",
    "deep-equal": "^1.0.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "lodash.template": "^4.4.0",
    "lodash.templatesettings": "^4.1.0",
    "mock-fs": "^4.10.4",
    "properties": "^1.2.1",
    "semver": "^5.6.0",
    "tmp": "^0.0.33",
    "vscode-languageserver": "^5.2.1"
  },
  "devDependencies": {
    "@types/decamelize": "^1.2.0",
    "@types/deep-equal": "^1.0.1",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.1.2",
    "@types/lodash": "^4.14.119",
    "@types/lodash.template": "^4.4.4",
    "@types/mock-fs": "^4.10.0",
    "@types/semver": "^5.5.0",
    "@types/tmp": "^0.1.0",
    "find-node-modules": "^1.0.4",
    "findup-sync": "^3.0.0",
    "husky": "^1.3.1",
    "jest": "^25.1.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.1.6"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
