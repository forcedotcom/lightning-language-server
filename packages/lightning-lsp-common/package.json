{
  "name": "@salesforce/lightning-lsp-common",
  "version": "4.12.13",
  "description": "Common components for lwc-language-server and aura-language-server.",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./utils": {
      "import": "./lib/utils.js",
      "require": "./lib/utils.js",
      "types": "./lib/utils.d.ts"
    },
    "./base-context": {
      "import": "./lib/base-context.js",
      "require": "./lib/base-context.js",
      "types": "./lib/base-context.d.ts"
    },
    "./decorators": {
      "import": "./lib/decorators/index.js",
      "require": "./lib/decorators/index.js",
      "types": "./lib/decorators/index.d.ts"
    },
    "./logger": {
      "import": "./lib/logger.js",
      "require": "./lib/logger.js",
      "types": "./lib/logger.d.ts"
    },
    "./namespace-utils": {
      "import": "./lib/namespace-utils.js",
      "require": "./lib/namespace-utils.js",
      "types": "./lib/namespace-utils.d.ts"
    },
    "./indexer/attributeInfo": {
      "import": "./lib/indexer/attributeInfo.js",
      "require": "./lib/indexer/attributeInfo.js",
      "types": "./lib/indexer/attributeInfo.d.ts"
    },
    "./indexer/tagInfo": {
      "import": "./lib/indexer/tagInfo.js",
      "require": "./lib/indexer/tagInfo.js",
      "types": "./lib/indexer/tagInfo.d.ts"
    }
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/lightning-language-server.git"
  },
  "scripts": {
    "clean": "rm -rf lib && rm -rf src/resources/sfdx/typings/copied",
    "cleanTestData": "node ../../scripts/removeTestData.js",
    "build": "tsc -p . && node scripts/build.js",
    "watch": "tsc -w  | awk '{gsub(/\\033c/,\"\") system(\"\")}1'",
    "test": "jest --runInBand",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --passWithNoTests --runInBand",
    "test:debugWindows": "node --inspect-brk ../../node_modules/jest/bin/jest.js --passWithNoTests --runInBand",
    "test_with_coverage": "jest --runInBand --coverage --collectCoverageFrom=src/**/*.ts --collectCoverageFrom=!src/**/*.d.ts --collectCoverageFrom=!src/**/__tests__/**/*",
    "lint": "eslint -c .eslintrc.json --ext .ts ./src",
    "format": "prettier --write \"src/**/*.ts\"",
    "windowsCopySymlinks": "rm ./test-workspaces && cp -r ../../test-workspaces ./test-workspaces",
    "package": "yarn pack"
  },
  "dependencies": {
    "deep-equal": "^1.0.1",
    "ejs": "^3.1.10",
    "jsonc-parser": "^2.2.1",
    "vscode-languageserver": "^5.2.1",
    "vscode-uri": "^2.1.2"
  },
  "devDependencies": {
    "@lwc/engine-dom": "8.16.0",
    "@salesforce/apex": "0.0.21",
    "@types/deep-equal": "^1.0.1",
    "@types/ejs": "^3.1.5",
    "@types/jest": "^29.5.14",
    "@types/mock-fs": "^4.13.4",
    "@types/tmp": "^0.1.0",
    "find-node-modules": "^1.0.4",
    "glob": "^11.0.3",
    "jest": "^29.7.0",
    "jest-extended": "^0.11.5",
    "lwc": "2.37.3",
    "mock-fs": "^5.5.0",
    "prettier": "^2.0.5",
    "tmp": "^0.2.4",
    "ts-jest": "^29.2.6",
    "typescript": "5.0.4"
  }
}
