{
  "name": "aura-language-server",
  "version": "2.0.11",
  "description": "Language server for Aura components",
  "main": "lib/aura-indexer/indexer.js",
  "typings": "lib/shared.d.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc -p . && yarn copy-static-assets",
    "watch": "tsc -w | awk '{gsub(/\\033c/,\"\") system(\"\")}1'",
    "copy-static-assets": "ts-node copy-static-assets.ts",
    "test": "jest --runInBand",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --passWithNoTests --runInBand",
    "test_with_coverage": "jest --runInBand --coverage --collectCoverageFrom=src/**/*.ts --collectCoverageFrom=!src/**/*.d.ts --collectCoverageFrom=!src/**/__tests__/**/*",
    "lint": "tslint 'src/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "yarn prepare && yarn lint && yarn test"
  },
  "dependencies": {
    "acorn": "^6.0.0",
    "acorn-loose": "^6.0.0",
    "acorn-walk": "^6.0.0",
    "camelcase": "5.0.0",
    "change-case": "^3.1.0",
    "comment-parser": "0.5.0",
    "deep-equal": "1.0.1",
    "enhanced-resolve": "^2.2.2",
    "eslint": "^5.15.3",
    "fs-extra": "5.0.0",
    "glob": "^7.1.1",
    "lazy.js": "^0.5.1",
    "lightning-lsp-common": "^2.0.11",
    "line-column": "^1.0.2",
    "lwc-language-server": "^2.0.11",
    "minimatch": "^3.0.3",
    "patch-package": "^6.0.5",
    "properties": "1.2.1",
    "resolve-from": "2.0.0",
    "shelljs": "^0.8.3",
    "vscode-languageserver": "^5.2.1",
    "vscode-nls": "^4.0.0",
    "vscode-uri": "^1.0.6",
    "xml2js": "0.4.19"
  },
  "devDependencies": {
    "@types/babel-types": "7.0.4",
    "@types/deep-equal": "1.0.1",
    "@types/fs-extra": "5.0.4",
    "@types/glob": "5.0.35",
    "@types/jest": "23.3.1",
    "@types/lazy.js": "^0.3.32",
    "@types/node": "8.10.0",
    "@types/shelljs": "^0.8.1",
    "@types/xml2js": "0.4.3",
    "babel-types": "6.26.0",
    "husky": "0.14.3",
    "jest": "23.4.2",
    "lint-staged": "8.1.0",
    "npm-run": "^5.0.1",
    "prettier": "1.16.4",
    "ts-jest": "23.1.3",
    "ts-node": "^7.0.1",
    "tsc-transpile-only": "0.0.3",
    "tslint": "5.11.0",
    "typescript": "3.1.6"
  },
  "publishConfig": {
    "registry": "https://npm.lwcjs.org"
  }
}
