{
  "name": "@salesforce/aura-language-server",
  "version": "3.0.3",
  "description": "Language server for Aura components.",
  "main": "lib/aura-indexer/indexer.js",
  "typings": "lib/shared.d.ts",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/forcedotcom/lightning-language-server.git"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "cleanTestData": "node ../../scripts/removeTestData.js",
    "build": "tsc -p . && yarn copy-static-assets",
    "watch": "tsc -w | awk '{gsub(/\\033c/,\"\") system(\"\")}1'",
    "copy-static-assets": "ts-node copy-static-assets.ts",
    "test": "jest --runInBand",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --passWithNoTests --runInBand",
    "test:debugWindows": "node --inspect-brk ../../node_modules/jest/bin/jest.js --passWithNoTests --runInBand",
    "test_with_coverage": "jest --runInBand --coverage --collectCoverageFrom=src/**/*.ts --collectCoverageFrom=!src/**/*.d.ts --collectCoverageFrom=!src/**/__tests__/**/*",
    "lint": "tslint 'src/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "yarn prepare && yarn lint && yarn test",
    "windowsCopySymlinks": "rm ./test-workspaces && cp -r ../../test-workspaces ./test-workspaces"
  },
  "dependencies": {
    "@salesforce/lightning-lsp-common": "3.0.3",
    "acorn": "^6.0.0",
    "acorn-loose": "^6.0.0",
    "acorn-walk": "^6.0.0",
    "change-case": "^3.1.0",
    "enhanced-resolve": "^2.2.2",
    "fs-extra": "^5.0.0",
    "line-column": "^1.0.2",
    "minimatch": "^3.0.3",
    "properties": "^1.2.1",
    "resolve-from": "^2.0.0",
    "vscode-languageserver": "^5.2.1",
    "vscode-languageserver-types": "3.14.0",
    "vscode-nls": "^4.0.0",
    "vscode-uri": "1.0.6"
  },
  "devDependencies": {
    "@types/babel-types": "^7.0.4",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^5.0.35",
    "@types/jest": "^25.1.2",
    "@types/node": "^8.10.0",
    "@types/shelljs": "^0.8.1",
    "babel-types": "^6.26.0",
    "eslint": "^5.15.3",
    "glob": "^7.1.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^8.1.0",
    "npm-run": "^5.0.1",
    "prettier": "^1.19.1",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.3.0",
    "ts-node": "^7.0.1",
    "tsc-transpile-only": "^0.0.3",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.1.6"
  }
}
