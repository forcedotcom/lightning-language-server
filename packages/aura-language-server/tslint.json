{
    "extends": "tslint:recommended",
    "rules": {
        "arrow-parens": false,
        "no-console": [false],
        "quotemark": [true, "single"],
        "ordered-imports": [false],
        "object-literal-sort-keys": false,
        "max-line-length": [true, 160],
	    "eofline": false
    },
    "linterOptions": {
        "exclude": [
            "src/resources/**",
            "src/html-language-service/**",
            "src/tern-aura.ts"
        ]
    }
}
