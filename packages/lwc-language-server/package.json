{
  "name": "lwc-language-server",
  "version": "2.2.4",
  "description": "Language server for Lightning Web Components.",
  "main": "lib/indexer.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib && rm -rf src/resources/sfdx/typings/copied",
    "build": "tsc -p . && cp -r src/resources lib/",
    "watch": "tsc -w | awk '{gsub(/\\033c/,\"\") system(\"\")}1'",
    "test": "jest --runInBand",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --passWithNoTests --runInBand",
    "test:debugWindows": "node --inspect-brk ../../node_modules/jest/bin/jest.js --passWithNoTests --runInBand",
    "test_with_coverage": "jest --runInBand --coverage --collectCoverageFrom=src/**/*.ts --collectCoverageFrom=!src/**/*.d.ts --collectCoverageFrom=!src/**/__tests__/**/*",
    "lint": "tslint 'src/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "yarn prepare && yarn lint && yarn test",
    "windowsCopySymlinks": "rm ./test-workspaces && cp -r ../../test-workspaces ./test-workspaces"
  },
  "dependencies": {
    "@babel/plugin-syntax-class-properties": "^7.2.0",
    "@babel/plugin-syntax-decorators": "^7.2.0",
    "@lwc/babel-plugin-component": "0.34.8",
    "@babel/preset-typescript": "^7.3.3",
    "@lwc/compiler": "0.34.8",
    "@lwc/engine": "0.34.8",
    "@lwc/errors": "0.34.8",
    "@lwc/template-compiler": "0.34.8",
    "@salesforce/apex": "0.0.11",
    "@salesforce/label": "0.0.11",
    "@salesforce/resourceurl": "0.0.11",
    "@salesforce/schema": "0.0.11",
    "@salesforce/user": "0.0.11",
    "babel-core": "7.0.0-bridge.0",
    "camelcase": "5.0.0",
    "comment-parser": "0.5.0",
    "decamelize": "^2.0.0",
    "deep-equal": "1.0.1",
    "fs-extra": "5.0.0",
    "glob": "7.1.3",
    "lightning-lsp-common": "^2.2.4",
    "properties": "1.2.1",
    "vscode-languageserver": "^5.2.1",
    "vscode-nls": "^4.0.0",
    "vscode-uri": "^1.0.6",
    "xml2js": "0.4.19"
  },
  "devDependencies": {
    "@types/babel-types": "7.0.4",
    "@types/decamelize": "^1.2.0",
    "@types/deep-equal": "1.0.1",
    "@types/fs-extra": "5.0.4",
    "@types/glob": "5.0.35",
    "@types/jest": "^23.3.12",
    "@types/node": "8.10.0",
    "@types/xml2js": "0.4.3",
    "babel-types": "6.26.0",
    "husky": "1.1.0",
    "jest": "23.6.0",
    "lint-staged": "7.3.0",
    "prettier": "1.16.4",
    "ts-jest": "23.10.3",
    "tslint": "5.11.0",
    "typescript": "3.1.6"
  },
  "publishConfig": {
    "registry": "https://npm.lwcjs.org"
  }
}
