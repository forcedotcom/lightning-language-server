# version format
version: '{branch}-{build}'

# Do not build on tags (GitHub and BitBucket)
skip_tags: true

# Limit the number of last commits when cloning the repo/branch
clone_depth: 1

# Do not build feature branch with open Pull Requests
skip_branch_with_pr: true

# Build on x64 only
platform: x64

install:
  - ps: Install-Product node 10.12.18 x64
  - yarn install

build_script:
  - yarn run lint

test_script:
  - node --version
  - yarn --version
  - yarn run test